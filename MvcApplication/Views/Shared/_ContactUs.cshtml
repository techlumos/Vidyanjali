@model Vidyanjali.Areas.EMS.Models.Enquiry
@{
    ViewBag.Title = ViewBag.title;
    Layout = "~/Views/Shared/_GeneralPage.cshtml";
}
<div class="outer-container">
    <div class="banner">
        <img src="/content/public/images/Vidyanjali_Top-1.webp" class="img-fluid" alt="Banner">
    </div>
</div>

<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="container">
        <div class="primary" data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1800">
            <h1>CONTACT US</h1>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d497534.2341404903!2d77.59797500000002!3d13.036550000000002!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x43136feaf8d48ec5!2sVidyanjali%20Academy%20for%20Learning!5e0!3m2!1sen!2sus!4v1648102409978!5m2!1sen!2sus" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="contact-inner">
                    <p>Thank You for showing interest in Vidyanjali Academy.</p>
                    <p>You may connect with us on the phone number, email address or address given below. Alternatively, fill the contact form at the bottom of this page.</p>
                    <h4 data-aos="fade-up" data-aos-easing="linear" data-aos-duration="1800">ADDRESS</h4>
                    <p data-aos="fade-up" data-aos-easing="linear" data-aos-duration="2000">
                        Vidyanjali Academy for Learning<br>
                        Opp SBI Bank, Cholanayakanahalli,<br>
                        R. T. Nagar, Bangalore – 560032.
                    </p>
                    <p>Administration Office Hours</p>
                    <h4>Mon to Sat: 9:30 AM - 12:30 PM</h4>
                    <p data-aos="fade-up" data-aos-easing="linear" data-aos-duration="2200"><b>Phone: </b>+91 8023544891, +91 9008202222, +91 7019367324</p>
                    <p data-aos="fade-up" data-aos-easing="linear" data-aos-duration="2400"><b>Email:</b>  info@vidyanjali.in</p>
                </div>
                <div class="contact-inner">
                    <p>Fill up this form.</p>
                    <p>One of our representatives will get in touch with you within 24 hours.</p>
                </div>
                @using (Html.BeginForm("Enquiry", "Home", FormMethod.Post, new { model = this.Model, @id = "contactForm" }))
                {
                    @Html.AntiForgeryToken()
                    <h3>Enquire Now</h3>
                    <div class="form-info">
                        @Html.TextBoxFor(model => model.Name, new Dictionary<string, object> { { "maxlength", "100" }, { "placeholder", "Name" } })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                    <div class="form-info">
                        @Html.TextBoxFor(model => model.Phone, new Dictionary<string, object> { { "maxlength", "100" }, { "placeholder", "Phone Number" } })
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                    <div class="form-info">
                        @Html.TextBoxFor(model => model.Email, new Dictionary<string, object> { { "maxlength", "100" }, { "placeholder", "email ID" } })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    <div class="form-info">
                        @Html.TextBoxFor(model => model.Subject, new Dictionary<string, object> { { "maxlength", "100" }, { "placeholder", "Subject" } })
                        @Html.ValidationMessageFor(model => model.Subject)
                    </div>
                    <div class="form-info">
                        @Html.TextAreaFor(model => model.Message, new Dictionary<string, object> { { "rows", "3" }, { "placeholder", "Message" } })
                        @Html.ValidationMessageFor(model => model.Message)
                    </div>
                    <!--  <span class="log-failed">Login Failed, Try again</span> -->
                    <div class="editor-field">
                        <div class="captcha">
                            <a href="@Url.Action("Home")">
                                <img alt="Captcha" src="@Url.Action("CaptchaImage")" />
                            </a>
                        </div>
                    </div>

                    <div class="editor-field">
                        @Html.TextBoxFor(p => p.Captcha, new Dictionary<string, object> { { "placeholder", "Enter verification code here" } })

                        @*<input type="text" placeholder="Enter verification code here">*@
                    </div>
                    @Html.ValidationMessage("EnquiryError")
                    <div class="form-info">
                        <input type="checkbox" id="vehicle1" name="vehicle1" value="Bike" required>
                        <label for="vehicle1"> YES, I have read and agree to the privacy policy, and herewith share my details to be contactedm by the school.</label>
                    </div>
                    <input type="submit" name="submit" value="Submit" />
                }

            </div>
        </div>
    </div>
</div>
    </div>
  </div>
    </div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}