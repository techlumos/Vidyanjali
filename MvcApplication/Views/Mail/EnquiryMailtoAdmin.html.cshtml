@model Vidyanjali.Areas.EMS.Models.Enquiry
@{
    Layout = null;
}

<div align="center">
    <table cellpadding="0" cellspacing="0" border="0" width="650" style="width:600px;margin:0 auto;border-collapse:inherit;font-family: Arial, sans-serif,'Open Sans'; background:#ffffff;font-size:14px;border:1px solid #d3d3d3;" class="table-container">
        <tr>
            <td style="padding:0px;" align="center" valign="top">
                <table cellpadding="0" cellspacing="0" border="0" style="width:100%;">
                    <tr>
                        <td width="600" style="width:600px" valign="top">
                            <table cellpadding="0" cellspacing="0" border="0" style="width:100%;">
                                <td cellpadding="0" cellspacing="0" border="0" style="width:100%;">
                                <tr>
                                    <td valign="top" style="text-align:center;padding:0;">
                                        <a href="https://vidyanjali.in/"><img src="https://vidyanjali.in/content/public/images/Vidyanjali_Logo.webp" alt="logo" /></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td valign="top" style="color:#333; text-align:left; font-size: 16px;letter-spacing: 0.04em; line-height: 20px;background: #f9f9f9;padding:40px 0 5px 30px;font-family: Arial, Helvetica, sans-serif,'Open Sans';text-transform:capitalize;">
                                        Dear Team,
                                    </td>
                                </tr>
                                <tr>
                                    <td valign="top" style="color:#333; text-align:left; font-size: 16px;letter-spacing: 0.04em; line-height: 25px;background: #f9f9f9;padding:0px 0 25px 30px;font-family: Arial, Helvetica, sans-serif,'Open Sans';text-transform:capitalize;">
                                        You have a new Business Enquiry from Website as follows.
                                    </td>
                                </tr>
                                <tr>
                                    <td valign="top" style="color:#333; text-align:center; font-size: 16px;letter-spacing: 0.04em; line-height: 20px;background: #f9f9f9;padding:50px 0px 0px;font-weight:bold;font-family: Arial, Helvetica, sans-serif,'Open Sans';text-transform:capitalize;">
                                        Enquiry Form
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:none; background: #f9f9f9;padding:15px 50px 50px 50px;font-family: Arial, Helvetica, sans-serif,'Open Sans';" valign="top">
                                        <table cellpadding="0" cellspacing="0" border="1" style="width:100%; border:2px solid #f1b600;background: #f9f9f9; border-collapse: collapse;">
                                            <tr>
                                                <th style="padding: 10px;font-size: 16px;letter-spacing: 0.04em; line-height: 20px;color:#333;font-family: Arial, Helvetica, sans-serif,'Open Sans';text-align: left;font-weight: normal;">Name</th>

                                                <td style="padding: 10px;font-size: 16px;letter-spacing: 0.04em; line-height: 20px;color:#333;font-family: Arial, Helvetica, sans-serif,'Open Sans';">@Model.Name</td>
                                            </tr>
                                            <tr>
                                                <th style="padding: 10px;font-size: 16px;letter-spacing: 0.04em; line-height: 20px;color:#333;font-family: Arial, Helvetica, sans-serif,'Open Sans';text-align: left;font-weight: normal;">Email id</th>

                                                <td style="padding: 10px;font-size: 16px;letter-spacing: 0.04em; line-height: 20px;color:#333;font-family: Arial, Helvetica, sans-serif,'Open Sans';">@Model.Email</td>
                                            </tr>
                                            <tr>
                                                <th style="padding: 10px;font-size: 16px;letter-spacing: 0.04em; line-height: 20px;color:#333;font-family: Arial, Helvetica, sans-serif,'Open Sans';text-align: left;font-weight: normal;">Phone Number</th>

                                                <td style="padding: 10px;font-size: 16px;letter-spacing: 0.04em; line-height: 20px;color:#333;font-family: Arial, Helvetica, sans-serif,'Open Sans';">@Model.Phone</td>
                                            </tr>
                                            <tr>
                                                <th style="padding: 10px;font-size: 16px;letter-spacing: 0.04em; line-height: 20px;color:#373737;font-family: Arial, Helvetica, sans-serif,'Open Sans';text-align: left;font-weight: normal;">Message</th>

                                                <td style="padding: 10px;font-size: 16px;letter-spacing: 0.04em; line-height: 20px;color:#373737;font-family: Arial, Helvetica, sans-serif,'Open Sans';">@Html.Raw(@Model.Message)</td>
                                            </tr>

                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td valign="top" style="color:#333; text-align:left; font-size: 16px;letter-spacing: 0.04em; line-height: 20px;background: #f9f9f9;padding:20px 0 5px 30px;font-weight:bold;font-family: Arial, Helvetica, sans-serif,'Open Sans';text-transform:capitalize;">With Regards,</td>
                                </tr>
                                <tr>
                                    <td valign="top" style="color:#333; text-align:left; font-size: 16px;letter-spacing: 0.04em; line-height: 25px;background: #f9f9f9;padding:0px 0 50px 30px;font-weight:bold;font-family: Arial, Helvetica, sans-serif,'Open Sans';text-transform:capitalize;">Vidyanjali Academy for Learning</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td style="padding:0px;">
                <table cellpadding="0" cellspacing="0" border="0" style="width: 100%;">
                    <tr>
                        <td style="background:#999999;padding:15px;text-align: center;color:#40120c;font-size: 17px;line-height: 16px;font-family: Arial, Helvetica, sans-serif,'Open Sans';letter-spacing: 0.04em;">
                            © @DateTime.Now.Year Sri Ramaiah Reddy Educational Trust. All Rights Reserved.
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

</div>

