@{
    ViewBag.Title = "Upload new File";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2>Upload File</h2>
<div>
    <object type="application/x-shockwave-flash" width="0" height="0">
        <a href="http://www.adobe.com/go/getflashplayer" target="_blank"><img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="Get Adobe Flash player" /></a>
    </object>
</div>
@using (Html.BeginForm("Upload", "ImageManager", FormMethod.Post, new Dictionary<string, object> { { "id", "frmImgUpload" } }))
{
    <div id="optType">
        <div class="editor-label">
            Select Type
        </div>
        <div class="editor-field">
            <div id="resultSelectType">
            </div>
        </div>
    </div>
    <div id="optSection" style="display: none">
        <div class="editor-label">
            Select Section
        </div>
        <div class="editor-field">
            <div id="resultSelectSection">
            </div>
        </div>
        <div class="editor-field" id="showCustomHeightWidth">
            Resolution :
            <input type="text" name="txtWidth" id="txtWidth" data="0" style="width: 50px" onkeypress="return isNumberKey(event)" />
            X
            <input type="text" name="txtHeight" id="txtHeight" data="0" style="width: 50px" onkeypress="return isNumberKey(event)" />
            <a href="#" id="resetDefaults" class="button left" title="reset to Original" style="float: none; margin: -8px 3px;">
                <span class="icon icon188"></span></a>
        </div>
        <div class="editor-field" id="sectionDescription">
        </div>
    </div>
    <div id="optUploader" style="display: none">
        <div class="editor-field">
            <input type="file" name="file_upload" id="file_upload" />
            <input type="hidden" name="hdRerefenceId" value="@ViewBag.ReferenceID" />
            <input type="hidden" name="uploadGroup" value="@ViewBag.Group" />

            <!-- JCrop Values-->
            <input type="hidden" name="x" value="0" />
            <input type="hidden" name="y" value="0" />
            <input type="hidden" name="x1" value="0" />
            <input type="hidden" name="y1" value="0" />
        </div>
    </div>
    <div id="listPreview">
    </div>
    <p class="ibuttons">
        <input type="submit" value="Upload" id="btnUpload" class="ibutton save" />
    </p>
}

<div id="imageList_container">
    <div id="imageList_box">
    </div>
</div>
