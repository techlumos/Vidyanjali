@section style
{
    <link href="@Url.Content("~/Areas/FileManagement/Content/Uploadify/uploadify.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Areas/FileManagement/Content/jCrop/jquery.Jcrop.css")" rel="stylesheet" />
}

@section script
{
    <script src="@Url.Content("~/Areas/FileManagement/Content/Uploadify/jquery.uploadify.js")"></script>
    <script src="@Url.Content("~/Areas/FileManagement/Content/Uploadify/jquery.pinbox.js")"></script>
    <script src="@Url.Content("~/Areas/FileManagement/Content/jCrop/jquery.Jcrop.js")"></script>
    <script src="@Url.Content("~/Areas/FileManagement/Content/jCrop/jquery.color.js")"></script>
    <script src="@Url.Content("~/Areas/FileManagement/Content/Uploadify/files.js")"></script>
   
    <script>
        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode;
            if (charCode != 46 && charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            } else {
                return true;
            }
        }
    </script>
}
