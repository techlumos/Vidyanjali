@model Vidyanjali.Areas.FileManagement.Models.ImageFile
<div style="width: 500px">
    @using (Html.BeginForm("Edit", "ImageManager"))
    {
        <fieldset>
            <legend>Edit File : @Model.FileName</legend>

            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ReferenceId)
            @Html.HiddenFor(model => model.Group)
            @Html.HiddenFor(model => model.Section)
            @Html.HiddenFor(model => model.Url)
            @Html.HiddenFor(model => model.IsDefault)

            <div class="editor-label">
                @Html.LabelFor(model => model.Caption)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Caption)
                @Html.ValidationMessageFor(model => model.Caption)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FileOrder)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FileOrder)
                @Html.ValidationMessageFor(model => model.FileOrder)
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.Tag)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Tag)
                @Html.ValidationMessageFor(model => model.Tag)
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.Eurl)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Eurl)
                @Html.ValidationMessageFor(model => model.Eurl)
            </div>

            <p class="ibuttons">
                <input id="submitEdit" type="submit" value="Save" class="ibutton save" />
            </p>
        </fieldset>
    }
</div>
<script type="text/javascript">
    $('#submitEdit').click(function() {
        var caption = $('input#Caption').val();
        var description = $('input#Description').val();
        var fileOrder = $('input#FileOrder').val();
        if (caption != '' && description != '' && fileOrder != '') {
            return true;
        }
        $('.notificationText').empty().html('All the details are required! Please enter');
        $('#notificationContainer').show().delay(4000).fadeOut();
        return false;
    });
</script>
