@model Vidyanjali.Areas.EMS.Models.Enquiry

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Enquiry</h2>
<div class="main-content">
        <div class="main-content-header">
            <h3><i class="fa fa-archive fa-2x"></i>Enquiry from : @Model.Email</h3>
            <a href="@Url.Action("Index", "Enquiry")" class="back"><i class="fa fa-chevron-circle-left"></i>Back to list</a>
        </div>
        <div id="tabs">
            <ul>
                <li><a href="#tabs-1">Enquiry Details</a></li>
            </ul>
            <div id="tabs-1">
                <table class="table-form">
                    <tbody>
                        <tr>
                            <td style="text-align:left"><strong>@Model.Name | @Model.Email | @Model.Phone</strong>
                            </td>
                            <td>&nbsp;</td>
                            <td style="text-align:right">
                                @Model.EnquiryDate.ToLongDateString()
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">&nbsp;</td>
                        </tr>
                        <tr>
                            <td colspan="3" style="text-align:left"><strong>Enquiry Type : @Model.EnqCategoryType</strong></td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <hr />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3" style="text-align:left">
                                @Html.Raw(Model.Message.Replace(Environment.NewLine, "<br/>"))
                            </td>
                        </tr>
                        @*<tr>
                            <td colspan="3">
                                <hr />
                            </td>
                        </tr>*@
                    </tbody>
                </table>
            </div>
        </div>
</div>
