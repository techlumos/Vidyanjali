@model IEnumerable<Vidyanjali.Areas.Admin.Models.Topic.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="main-content-header">
        <h3><i class="fa fa-sitemap fa-2x"></i>Manage Pages</h3>
        <a href="@Url.Action("Create", "Team")" class="add-new"><i class="fa fa-plus"></i>Add new</a>
    </div>

    <table class="table-list" id="groupingTable">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th style="width: 70px; ">
                    Service Name
                </th>
                <th>
                    Qualification
                </th>
                <th>
                    Designation
                </th>
                <th style="width: 180px; text-align: center">
                    Published
                </th>
                <th style="width: 180px; text-align: center">
                    IMage
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="width: 70px; text-align: center">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Name", new { id = item.Id })" title="Edit Webpage : '@item.Name'" >
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td style="width: 70px;">
                    @Html.DisplayFor(modelItem => item.Qualification)
                </td>
                <td style="width: 70px; ">
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td style="width: 130px; text-align: center">
                    @if (item.IsPublished)
                    {
                        <i class="fa fa-check" style="float: none"></i>
                    }
                    else
                    {
                        <i class="fa fa-times" style="float: none"></i>
                    }
                </td>
                <td>
                    <a href="@Url.Action("UploadFile", "ImageManager", new { area = "FileManagement", group = "Team", section = "TeamImage", referenceId = item.Id }, null)" , title="Manage Files (Images, Documents etc.)" class="button middle" title="Images">
                        <span class="icon icon148"></span>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
